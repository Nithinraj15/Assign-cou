package LearningValue;

public class MemeoryRep {
	public static void main(String args[]) {
		boolean age = false;
		short a = 2;
		int b = 10;
		long c = 1023L;
		float d = 12.34f;
		double e = 12.345;
		char f = 'a';
		System.out.println("Data Type: " + Integer.TYPE);
		System.out.println("Size : " + Integer.BYTES + " bytes");
		System.out.println("Minimum Value: " + Integer.MIN_VALUE);
		System.out.println("Maximum Value: " + Integer.MAX_VALUE);
		System.out.println("Data Type: " + Boolean.TYPE);
		System.out.println("Size : JVM-dependent (typically 1 byte)");
		System.out.println("Possible Values: true, false");
		System.out.println("Data Type: " + Short.TYPE);
		System.out.println("Size : " + Short.BYTES + " bytes");
		System.out.println("Minimum Value: " + Short.MIN_VALUE);
		System.out.println("Maximum Value: " + Short.MAX_VALUE);
		System.out.println("Data Type: " + Long.TYPE);
		System.out.println("Size : " + Long.BYTES + " bytes");
		System.out.println("Minimum Value: " + Long.MIN_VALUE);
		System.out.println("Maximum Value: " + Long.MAX_VALUE);
		System.out.println("Data Type: " + Float.TYPE);
		System.out.println("Size : " + Float.BYTES + " bytes");
		System.out.println("Minimum Value: " + Float.MIN_VALUE);
		System.out.println("Maximum Value: " + Float.MAX_VALUE);
		System.out.println("Data Type: " + Double.TYPE);
		System.out.println("Size : " + Double.BYTES + " bytes");
		System.out.println("Minimum Value: " + Double.MIN_VALUE);
		System.out.println("Maximum Value: " + Double.MAX_VALUE);
		System.out.println("Data Type: " + Character.TYPE);
		System.out.println("Size : " + Character.BYTES + " bytes");
		System.out.println("Minimum Value: " + Character.MIN_VALUE);
		System.out.println("Maximum Value: " + Character.MAX_VALUE);
	}
}
