package array;

public class ArrayCombo1Dand2D {
	public static void main(String args[]) {
		int [] matchScores = {65, 42, 10, 88, 30, 5};
		int totalRuns = 0;
		for(int arr : matchScores) {
			totalRuns += arr;
		}
		int Largest = matchScores[0];
		for(int arr1 : matchScores) {
			if(arr1 > Largest) {
				Largest = arr1;
			}
		}
		int totalRun = 0;
		System.out.println("--- Single Match Analysis ---");
		System.out.println("Total runs in the match: " + totalRuns);
		System.out.println("Highest individual score: " + Largest);
		int [][] seasonMatchScores = {{180}, {165}, {205}, {190}};
		for(int i=0; i<seasonMatchScores.length; i++) {
			totalRun += seasonMatchScores[i][0];
		}
		double averageRuns = (double)totalRuns/seasonMatchScores.length;
		System.out.println("--- Season Performance Analysis ---");
		System.out.println("Average score over 4 matches: " + averageRuns);
		System.out.println("Total runs across 4 matches: " + totalRun);
}
}
